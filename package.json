{
  "name": "bds-product",
  "version": "2.0.1",
  "main": "index.js",
  "author": "will",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsx script/esbuild.ts",
    "start": "npm run build && node build/server.js",
    "format": "prettier --write src",
    "lint": "prettier --check src && eslint --ignore-path .gitignore .",
    "ci": "yarn run format && yarn run lint",
    "schema:gen": "drizzle-kit generate --config=drizzle.config.ts",
    "schema:migrate": "ts-node ./src/config/migrate.ts",
    "proto:gen:user": "yarn proto-loader-gen-types --grpcLib=@grpc/grpc-js --outDir=src/protobufTypings proto/user.proto"
  },
  "dependencies": {
    "@fastify/autoload": "^5.10.0",
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/env": "^4.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/type-provider-json-schema-to-ts": "^3.0.0",
    "@grpc.ts/fastify-client": "workspace:*",
    "@grpc.ts/fastify-server": "workspace:*",
    "@grpc/grpc-js": "^1.10.10",
    "@grpc/proto-loader": "^0.7.13",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.31.2",
    "fastify": "^4.28.0",
    "fastify-plugin": "^4.5.1",
    "fastify-type-provider-zod": "^2.0.0",
    "ioredis": "^5.4.1",
    "pg": "^8.12.0",
    "pino": "^9.2.0",
    "pino-pretty": "^11.2.1",
    "query-string-esm": "^6.13.6",
    "turbo": "^2.0.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@types/config-yaml": "^1.1.4",
    "@types/google-protobuf": "^3.15.12",
    "@types/node": "^20.14.8",
    "@types/pg": "^8.11.6",
    "drizzle-kit": "^0.22.7",
    "esbuild": "0.17.14",
    "esbuild-plugin-pino": "^2.2.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "grpc-tools": "^1.12.4",
    "grpc_tools_node_protoc_ts": "^5.3.3",
    "json-schema-to-ts": "^3.1.0",
    "nodemon": "^3.1.4",
    "rimraf": "^5.0.7",
    "standard-version": "^9.5.0",
    "tiny-glob": "^0.2.9",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.15.7",
    "typescript": "^5.5.2"
  },
  "lint-staged": {
    "*.ts": [
      "prettier — config .prettierrc 'src/**/*.ts' — write",
      "eslint . — ext .ts — fix"
    ]
  }
}
